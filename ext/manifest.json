{
	
	"manifest_version": 2,
	"name": "WhatsBot client",
	"version": "0.0.1",
	
	"description": "An extension to integrate WhatsBot into WhatsApp Web",
	"icons": {
		
	},
	
	"browser_action": {
		"default_title": "WhatsBot extension"
	},
	
	"background": {
		"persistent": true,
		"scripts": ["background.js"]
	},
	
	"author": "Yotam Salmon",
	
	"permissions": [
		"activeTab",
		"webNavigation", 
		"webRequest",
		"tabs",
		"https://web.whatsapp.com/*"
	],
	
	"web_accessible_resources": [
		"js/api.min.js",
		"js/whatsbot.js"
	]
}